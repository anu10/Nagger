<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="4dp"
              android:paddingTop="4dp">

    <TextView
        android:id = "@+id/reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:id = "@+id/reminder_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id = "@+id/reminder_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/reminder_title"/>

    <TextView
        android:id = "@+id/reminder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id = "@+id/reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/reminder_time"
        android:paddingRight="8dp"/>

    <ImageButton
        android:src="@drawable/reject"
        android:id = "@+id/button_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminder_date"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>

    <ImageButton
        android:src="@drawable/accept"
        android:id = "@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminder_date"
        android:layout_toLeftOf="@id/button_reject"
        android:layout_marginRight="8dp"
        android:visibility="invisible"/>

</RelativeLayout>